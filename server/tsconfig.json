{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "rootDir": "src",
    "outDir": "../helpukraine-deploy/src",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "/*": ["./src/*"]
    },
    "typeRoots": ["./types"]
  },
  "exclude": ["temp", "node_modules"],
  "include": ["src"]
}
